#!/bin/bash

# http://toroid.org/ams/git-website-howto
# http://www.sitepoint.com/one-click-app-deployment-server-side-git-hooks/

## store the arguments given to the script
read oldrev newrev ref

# The deployed directory (the running site)
path=$(git config hooks.deploy_root)
use_branch=$(git config hooks.deploy_use_branch)

## Where to store the log information about the updates
LOGFILE=./post-receive.log

branchname=${ref#refs/heads/}
echo "Work on branch: $branchname"

echo "[$(date +"%F %T")] - Old SHA: $oldrev New SHA: $newrev Branch Name: $branchname" >> $LOGFILE

if [[ "$path" ]] ; then
  [[ "$use_branch" ]] && path="$path/$branch"
  echo "Setup distro in $path"
  [ -d "$path" ] || mkdir -p "$path"
  GIT_WORK_TREE=$path git checkout -f
  pushd $path > /dev/null
  [[ -f "setup.sh" ]] && bash setup.sh $branch
  popd  > /dev/null
fi
